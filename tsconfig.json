{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "lib": [ "es2018" ],
        "target": "ES2018",
        "moduleResolution": "Node",
        "sourceMap": false,
        "outDir": "dist",

        "typeRoots": [
            "src/typings",
            "node_modules/@types"
        ],

         
        // Resolving modules path
        "rootDirs": [ "./" ],
        "paths": {
            "*": [ "*" ]
        },
        "baseUrl": "./src"
        // Resolving modules path - END
    },
    "include": [
        "src/"
    ],
}